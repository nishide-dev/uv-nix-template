# pyproject.toml - Python project configuration
# This file is generated from the uv-nix-template Copier template

[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "{{ description }}"
readme = "README.md"
authors = [
    { name = "{{ author_name }}", email = "{{ author_email }}" }
]
requires-python = ">={{ python_version }}"
dependencies = []

# Classifiers help users find your project
# See https://pypi.org/classifiers/
classifiers = [
    "Development Status :: 3 - Alpha",
    "Intended Audience :: Developers",
    "Programming Language :: Python :: {{ python_version }}",
{%- if python_version == "3.10" %}
    "Programming Language :: Python :: 3.10",
{%- endif %}
{%- if python_version in ["3.10", "3.11"] %}
    "Programming Language :: Python :: 3.11",
{%- endif %}
{%- if python_version in ["3.10", "3.11", "3.12"] %}
    "Programming Language :: Python :: 3.12",
{%- endif %}
    "Programming Language :: Python :: 3.13",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.uv]
managed = true  # uvによる環境管理を有効化
dev-dependencies = []

# Hatch build configuration
[tool.hatch.build.targets.wheel]
packages = ["src/{{ package_name }}"]

# ============================================================================
# Development tool configurations
# ============================================================================

{% if use_ty -%}
# ty - 高速Python型チェッカー (Rust製)
# https://docs.astral.sh/ty/
[tool.ty]

[tool.ty.environment]
python-version = "{{ python_version }}"

[tool.ty.terminal]
output-format = "full"

{% endif -%}

{% if use_pytest -%}
# Pytest - テストフレームワーク
# https://docs.pytest.org/
[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]
addopts = [
    "--strict-markers",
    "--strict-config",
    "--showlocals",
]

# Coverage settings (pytest-cov plugin)
[tool.coverage.run]
source = ["src"]
branch = true

[tool.coverage.report]
show_missing = true
skip_covered = false
{% endif -%}

# ============================================================================
# Dependency Groups (PEP 735)
# https://peps.python.org/pep-0735/
# ============================================================================

[dependency-groups]
dev = [
{%- if use_pytest %}
    "pytest>=8.0",
    "pytest-cov>=4.1",
{%- endif %}
{%- if use_ruff %}
    "ruff>=0.6",
{%- endif %}
{%- if use_ty %}
    "ty",
{%- endif %}
]
